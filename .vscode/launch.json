  "version": "0.2.0",
  "configurations": [
    {
      "name": "auto restart",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "restart": true,
      "address": "localhost",
      "protocol": "inspector"
    },
    {
      "name": "current ts file",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
      "env": { "NODE_ENV": "dev" }
    }
  ]
}
